<Window x:Name="WarzoneConnect_Window" x:Class="WarzoneConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WarzoneConnect" Height="750" Width="1280" Activated="OpenWindow" Closing="PrepareStart" Initialized="OpenWindow">
    <Grid Margin="0,0,0,0">
        <MediaElement x:Name="Warzone_Intro" LoadedBehavior="Manual" MouseDown="SkipToNext" MediaEnded="Replay" Grid.ColumnSpan="3"/>
        <Image x:Name="Warzone_Title" HorizontalAlignment="Left" Height="230" Margin="165,276,0,0" VerticalAlignment="Center" Width="468" Source="pack://siteoforigin:,,,/Resources/warzone_connect.png"/>
    </Grid>
</Window>
